<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oil_staticon_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/common_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dip"
            android:text="常用"
            android:textColor="@color/oil_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/nearby_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dip"
            android:text="附近"
            android:textColor="@color/text1"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/gas_station_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gas_station_menu_grade"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gas_station_menu_item_selectore"
            android:gravity="center"
            android:padding="8dip"
            android:text="排队"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/gas_station_menu_sales"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gas_station_menu_item_selectore"
            android:gravity="center"
            android:padding="8dip"
            android:text="促销"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/gas_station_menu_distance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gas_station_menu_item_selectore"
            android:gravity="center"
            android:padding="8dip"
            android:text="距离"
            android:textColor="@color/text1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#cccccc" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gas_station_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>