<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/station_bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/station_map_min_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_marginTop="1dip"
            android:background="@drawable/settion_selector_selector"
            android:padding="5dip"
            android:src="@drawable/zoom_min_selector" />

        <ImageButton
            android:id="@+id/station_map_out_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_marginTop="1dip"
            android:background="@drawable/settion_selector_selector"
            android:padding="5dip"
            android:src="@drawable/zoom_out_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/station_map_myLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/settion_selector_selector"
            android:padding="5dip"
            android:src="@drawable/main_icon_location" />

        <com.jiedaoche.tigeroil.view.GasStationViewPager
            android:id="@+id/station_viewPager"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="bottom" />
    </LinearLayout>

</FrameLayout>