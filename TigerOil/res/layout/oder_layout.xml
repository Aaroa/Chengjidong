<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:padding="10dip"
            android:text="预约加油站:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_gasstation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="广州天鸿区"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="预约时间:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/order_date_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="3dip"
            android:background="@color/transparent"
            android:drawableRight="@drawable/down_arrow"
            android:cursorVisible="false"
            android:text="2015年06月24日  03:00-05:00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="2014-09-12  23:01-13:34"
            android:textColor="@color/balck"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="加油站位置:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="2014-09-12  23:01-13:34"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="加油站电话:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_gasstation_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="2014-09-12  23:01-13:34"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="预约人:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="2014-09-12  23:01-13:34"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="预约电话:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="2014-09-12  23:01-13:34"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:text="预约车牌号:"
            android:textColor="@color/balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_car_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textColor="@color/balck"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>