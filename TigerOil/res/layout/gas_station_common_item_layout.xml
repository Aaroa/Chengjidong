<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dip"
        android:background="@drawable/gas_station_item_selector"
        android:descendantFocusability="blocksDescendants" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/gas_station_item_appointment"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/gas_station_item_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/gas_station_item_distance"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:gravity="left|center"
                    android:text="1.中国石油新力加油站夺奇才有 顶替要地柑要枯"
                    android:textColor="@color/balck"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gas_station_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1.1km"
                    android:textColor="@color/balck"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/main_bg_press" />

            <TextView
                android:id="@+id/gas_station_item_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:singleLine="true"
                android:text="广州市天河区天府路冠盛酒店旁，天河公园正门附近"
                android:textColor="@color/text1"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/main_bg_press" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="排队状态:"
                    android:textColor="@color/text1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/gas_station_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="不排除"
                    android:textColor="@color/yellow"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/gas_station_item_appointment"
            style="@style/comm_red_btn"
            android:layout_width="50dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="预约"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>