<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/common_input_bg"
        android:padding="8dip" >

        <ImageView
            android:id="@+id/comm_editview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:src="@drawable/login_icon_name" />

        <ImageView
            android:id="@+id/comm_editview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_delete"
            android:visibility="gone" />

        <EditText
            android:id="@+id/comm_eidtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/comm_editview_delete"
            android:layout_toRightOf="@id/comm_editview_icon"
            android:background="@color/transparency"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>