<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/main_gas_station"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:background="@drawable/main_oil_text_selector"
            android:gravity="center"
            android:text="加油站"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/main_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/main_store"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/main_store_text_selestoe"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <com.jiedaoche.tigeroil.view.CircularImageView
        android:id="@+id/main_user_head_iv"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="40dip"
        android:src="@drawable/defalut_patient_icon" />

    <LinearLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dip"
        android:background="@drawable/main_menu_bg"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/main_menu_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dip"
            android:scaleType="fitXY"	
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/main_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:src="@drawable/menu_user_info" />

        <ImageView
            android:id="@+id/main_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:src="@drawable/menu_order" />

        <ImageView
            android:id="@+id/main_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:src="@drawable/menu_coupon" />

        <ImageView
            android:id="@+id/main_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:src="@drawable/menu_setting" />
    </LinearLayout>

</FrameLayout>