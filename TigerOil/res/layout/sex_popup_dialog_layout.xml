<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/bottom_popup_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dip"
            android:text="选择性别"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/main_bg_press" />

        <TextView
            android:id="@+id/sex_pop_man_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settion_selector_selector"
            android:gravity="center"
            android:padding="5dip"
            android:text="男"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/main_bg_press" />

        <TextView
            android:id="@+id/sex_pop_girl_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settion_selector_selector"
            android:gravity="center"
            android:padding="5dip"
            android:text="女"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/main_bg_press" />

        <Button
            android:id="@+id/sex_pop_cancel_btn"
            style="@style/comm_red_btn"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_margin="10dip"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>